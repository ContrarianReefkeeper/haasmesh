
config wifi-device 'radio0'
	option type 'mac80211'
	option path 'soc/20000000.pci/pci0000:00/0000:00:00.0/0000:01:00.0'
	option band '5g'
	option htmode 'VHT80'
	option channel 'auto'
	option cell_density '0'

config wifi-iface 'mesh0'
	option device 'radio0'
	option network 'lan'
	option key 'working12345'
	option encryption 'sae'
	option mesh_rssi_threshold '-75'
	option mesh_fwding '0'
	option mode 'mesh'
	option mesh_id 'HaasMesh'
	option ifname 'mesh0'
	option network 'bat_mesh0'

config wifi-iface 'ap_5g_1'
   option device 'radio0'
   option network 'lan'
   option mode 'ap'
   option ssid 'HaasMeshNewNode'
   option encryption 'psk2'
   option key 'working12345'
   option ieee80211r '1'
   option ft_over_ds '1'
   option ft_psk_generate_local '1'

config wifi-device 'radio1'
	option type 'mac80211'
	option path 'platform/soc/c000000.wifi'
	option band '5g'
	option channel 'auto'
	option cell_density '0'
	option htmode 'HE80'

config wifi-iface 'ap_5g_2'
   option device 'radio1'
   option network 'lan'
   option mode 'ap'
   option ssid 'HaasMeshNewNode'
   option encryption 'psk2'
   option key 'working12345'
   option ieee80211r '1'
   option ft_over_ds '1'
   option ft_psk_generate_local '1'

config wifi-device 'radio2'
	option type 'mac80211'
	option path 'platform/soc/c000000.wifi+1'
	option band '2g'
	option channel 'auto'
	option cell_density '0'
	option htmode 'HE40'

config wifi-iface 'ap_2g_1'
   option device 'radio2'
   option network 'lan'
   option mode 'ap'
   option ssid 'HaasMeshNewNode'
   option encryption 'psk2'
   option key 'working12345'
   option ieee80211r '1'
   option ft_over_ds '1'
   option ft_psk_generate_local '1'
