
config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11a'
	option path 'soc/40000000.pci/pci0000:00/0000:00:00.0/0000:01:00.0'
	option htmode 'VHT80'
	option channel '149'

config wifi-iface 'mesh0'
	option device 'radio0'
	option encryption 'sae'
	option mesh_fwding '0'
	option mode 'mesh'
	option ifname 'mesh0'
	option network 'bat_mesh0'
	option mesh_rssi_threshold '-75'
	option key 'working12345'
	option mesh_id 'HaasMesh'

config wifi-iface 'ap_5g_1'
	option device 'radio0'
	option network 'lan'
	option mode 'ap'
	option ft_over_ds '1'
	option encryption 'psk2'
	option ft_psk_generate_local '1'
	option key 'working12345'
	option ieee80211r '1'
	option ssid 'HaasMeshNewNode'

config wifi-device 'radio1'
	option type 'mac80211'
	option hwmode '11g'
	option path 'platform/soc/a000000.wifi'
	option channel '11'
	option htmode 'HT20'

config wifi-iface 'ap_2g_1'
	option device 'radio1'
	option network 'lan'
	option mode 'ap'
	option ft_over_ds '1'
	option encryption 'psk2'
	option ft_psk_generate_local '1'
	option ieee80211r '1'
	option ssid 'HaasMeshNewNode'
	option key 'working12345'

config wifi-device 'radio2'
	option type 'mac80211'
	option channel 'auto'
	option hwmode '11a'
	option path 'platform/soc/a800000.wifi'
	option htmode 'VHT80'

config wifi-iface 'ap_5g_2'
	option device 'radio2'
	option network 'lan'
	option mode 'ap'
	option ft_over_ds '1'
	option encryption 'psk2'
	option ft_psk_generate_local '1'
	option key 'working12345'
	option ieee80211r '1'
	option ssid 'HaasMeshNewNode'

